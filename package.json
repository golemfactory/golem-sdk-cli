{
  "name": "@golem-sdk/cli",
  "version": "0.1.0",
  "description": "CLI for Golem SDK",
  "main": "src/main.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx genversion src/lib/version.ts --es6 && tsc",
    "watch": "npx genversion src/lib/version.ts --es6 && tsc --watch",
    "lint": "npm run lint:ts && npm run lint:eslint",
    "lint:ts": "tsc --project tsconfig.json --noEmit",
    "lint:eslint": "eslint .",
    "format": "prettier -w .",
    "format:check": "prettier -c ."
  },
  "bin": "./src/main.ts",
  "keywords": [
    "golem",
    "network",
    "distributed",
    "computing",
    "sdk",
    "internet",
    "computer",
    "marketplace"
  ],
  "files": [
    "dist"
  ],
  "author": "GolemFactory <contact@golem.network>",
  "license": "LGPL-3.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@golem-sdk/golem-js": "^0.8.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "class-validator": "^0.14.0",
    "commander": "^11.0.0",
    "lodash": "^4.17.21",
    "luxon": "^3.4.2",
    "node-fetch": "^2.7.0",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.197",
    "@types/luxon": "^3.3.1",
    "@types/node": "^20.5.1",
    "@types/node-fetch": "^2.6.4",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "genversion": "^3.1.1",
    "jest": "^29.6.3",
    "prettier": "^3.0.2"
  }
}
